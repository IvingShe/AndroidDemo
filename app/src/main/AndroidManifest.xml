<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.iving.demo.androiddemoapp"
    xmlns:tools="http://schemas.android.com/tools">

  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
  <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
  <uses-permission android:name="android.permission.CALL_PHONE"/>

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--发送短息：发送彩信-->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--读取短信/彩信-->
     <uses-permission android:name="android.permission.READ_SMS" />
     <!--接收短息-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

   <application
       android:allowBackup="true"
       android:icon="@drawable/image_citic_logo"
       android:label="@string/app_name"
       android:roundIcon="@mipmap/ic_launcher_round"
       android:supportsRtl="true"
       android:theme="@style/AppTheme"
       tools:replace="icon,label">
       <activity
           android:name=".MainActivity"
           android:label="@string/app_name"
           android:theme="@style/AppTheme.NoActionBar">
           <intent-filter>
               <action android:name="android.intent.action.MAIN" />

               <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
       </activity>
       <activity
           android:name=".PermissionCheckerActivity"
           android:label="@string/title_activity_permission_checker"
           android:theme="@style/AppTheme.NoActionBar">
       </activity>
       <activity
           android:name="cn.iving.demo.customView.CustomViewActivity">
       </activity>
       <service android:name="cn.iving.demo.service.MainService"></service>
       <service android:name="cn.iving.demo.service.DownloadService"></service>
   </application>

</manifest>